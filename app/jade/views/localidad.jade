.container
    br
    //Ingreso de Cantón
    .row
        .col-sm-8.col-sd-offset-2
            .thumbnail
                .modal-header
                    h1.modal-title.text-center Nuevo Cantón
                .modal-body
                    .account-wall
                        form#cantonForm.form-signin(name="cantonForm")
                            //Input de identificador de cantón
                            .form-group(ng-class="{'has-error':cantonForm.int_id_canton.$invalid && cantonForm.int_id_canton.$touched}")
                                .row
                                    .col-sm-10.col-sm-offset-1
                                        .input-group
                                            .input-group-addon
                                                | Id. Cantón
                                            input.form-control(type="text", name="int_id_canton", ng-model="canton.int_id_canton",
                                            placeholder="123", maxlength="3", pattern="[-+]?[0-9]*", ng-required="true")
                                            span.glyphicon.glyphicon-remove.form-control-feedback(ng-if="cantonForm.int_id_canton.$invalid && cantonForm.int_id_canton.$touched")
                                        span.help-block(ng-if="cantonForm.int_id_canton.$error.required && cantonForm.int_id_canton.$touched") Identificador requerido
                                        span.help-block(ng-if="cantonForm.int_id_canton.$error.pattern && cantonForm.int_id_canton.$dirty") Solo se acepta números. ej. 123
                            //Input de descripción de cantón
                            .form-group(ng-class="{'has-error':cantonForm.str_nombre_canton.$invalid && cantonForm.str_nombre_canton.$touched}")
                                .row
                                    .col-sm-10.col-sm-offset-1
                                        .input-group
                                            .input-group-addon
                                                | Nombre del cantón
                                            input.form-control(type="text", name="str_nombre_canton", ng-model="canton.str_descripcion",
                                            placeholder="Ingrese el nombre del cantón", maxlength="100", ng-required="true")
                                            span.glyphicon.glyphicon-remove.form-control-feedback(ng-if="cantonForm.str_nombre_canton.$invalid && cantonForm.str_nombre_canton.$touched")
                                        span.help-block(ng-if="cantonForm.str_nombre_canton.$error.required && cantonForm.str_nombre_canton.$touched") Nombre de cantón requerido
                .modal-footer
                    //Botones de acceder y cancelación
                    .form-group
                        a.btn.btn-default(href='#/') Cancelar
                        button.btn.btn-primary(type="submit", data-dismiss="modal", ng-click="guardarCanton()", ng-disabled="cantonForm.$invalid") Guardar
    //Ingreso de Parroquia
