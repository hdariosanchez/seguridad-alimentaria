                                    .col-sm-10.col-sm-offset-1
                                        .input-group
                                            .input-group-addon
                                                | Cantón
                                            select.form-control(ng-model='modeloCantonSimple', name="cantonParroquia"
                                            ng-options="canton as canton.str_descripcion for canton in listadoCanton")
